<?xml version="1.0" encoding="UTF-8" ?>
<Configuration respondStatus="trace" strict="true" name="LogConfig">
    <Properties>
        <Property name="filepath">/log</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>[%d] - [%c] - [%highlight{%level}] - [%method] - [%t] - %msg%n</Pattern>
            </PatternLayout>
        </Console>
        <RollingFile name="spring"
                     fileName="${filepath}/spring.log"
                     filePattern="${filepath}/bak/logService-%d{yy-MM-dd HH:mm:ss}.log.gz">
            <PatternLayout>
                <Pattern>[%d] - [%c] - [%highlight{%level}] - [%method] - [%t] - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="0"/>
        </RollingFile>
        <RollingFile name="subscriberStats"
                     fileName="${filepath}/subscriberStats.log"
                     filePattern="${filepath}/bak/logService-%d{yy-MM-dd HH:mm:ss}.log.gz">
            <PatternLayout>
                <Pattern>[%d] %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="0"/>
        </RollingFile>
        <RollingFile name="logService"
                     fileName="${filepath}/logService.log"
                     filePattern="${filepath}/bak/logService-%d{yy-MM-dd HH:mm:ss}.log.gz">
            <PatternLayout>
                <Pattern>[%d] - [%c] - [%highlight{%level}] - [%method] - [%t] - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="2"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.log.subscribe" level="debug" additivity="false">
            <appender-ref ref="subscriberStats"/>
        </Logger>
        <Logger name="com.log" level="debug">
            <appender-ref ref="logService"/>
        </Logger>
        <Logger name="org.springframework" level="debug">
            <appender-ref ref="spring"/>
        </Logger>
        <root level="debug">
            <appender-ref ref="STDOUT"/>
        </root>
    </Loggers>

</Configuration>